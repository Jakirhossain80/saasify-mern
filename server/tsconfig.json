{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": true,
    "esModuleInterop": true,

    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
